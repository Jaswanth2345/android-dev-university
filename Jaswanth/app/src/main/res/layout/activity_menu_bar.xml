<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_14"
    tools:context=".menu_bar"
    android:layout_marginTop="25dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:padding="50dp"
        android:theme="?attr/actionBarTheme" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/img_11"
            android:layout_margin="8dp"
            android:contentDescription="Image 1 description" />

        <TextView
            android:id="@+id/tvAcademics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here are your Academics details..."
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/img_1"
            android:layout_margin="8dp"
            android:contentDescription="Image 2 description" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/img_2"
            android:layout_margin="8dp"
            android:contentDescription="Image 3 description" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/img_3"
            android:layout_margin="8dp"
            android:contentDescription="Image 4 description" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/img_4"
            android:layout_margin="8dp"
            android:contentDescription="Image 5 description" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/img_12"
            android:layout_margin="8dp"
            android:contentDescription="Image 6 description" />
    </GridLayout>

</LinearLayout>
