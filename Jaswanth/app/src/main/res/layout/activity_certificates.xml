<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificatesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textViewCertificate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate for Completing Project Of Internship"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />



        <TextView
            android:id="@+id/textViewCertificate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate for Summerterm Training"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />



        <TextView
            android:id="@+id/textViewCertificate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate for HackerRank(Python)"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />



    </LinearLayout>
</ScrollView>
